                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_delay_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_seekbar_delay"
                    android:layout_alignStart="@id/card_seekbar_delay"
                    android:layout_marginTop="6dp"
                    android:text="0.0"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_delay_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_seekbar_delay"
                    android:layout_alignEnd="@id/card_seekbar_delay"
                    android:layout_marginTop="6dp"
                    android:text="20.0"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</layout>